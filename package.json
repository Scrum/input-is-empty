  "main": "src/input-is-empty.js",
  "scripts": {
    "version": "conventional-changelog -i changelog.md -s -r 0 && git commit -am \"build: update changelog\"",
    "test": "testcafe all:headless test/e2e/test.js"
  },
  "files": [
    "src/"
  ],
  "keywords": [
    "DOM",
    "input",
    "empty",
    "field"
  ],
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-angular": "^7.0.1",
    "babel-eslint": "^8.2.6",
    "clinton": "^0.14.0",
    "conventional-changelog-cli": "^2.0.1",
    "eslint": "^5.3.0",
    "eslint-config-xo": "^0.24.1",
    "eslint-plugin-dependencies": "^2.4.0",
    "eslint-plugin-html": "^4.0.5",
    "eslint-plugin-markdown": "^1.0.0-beta.7",
    "eslint-plugin-testcafe": "^0.2.1",
    "eslint-plugin-unicorn": "^5.0.0",
    "http-server": "^0.11.1",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.2",
    "rimraf": "^2.6.1",
    "testcafe": "^0.22.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm t",
      "pre-commit": "clinton && lint-staged",
      "commit-msg": "commitlint --extends=@commitlint/config-angular -e"
    }
  },
  "lint-staged": {
    "src": "eslint",
    "test": "eslint",
    "*.md": "eslint"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "testcafe",
      "dependencies",
      "html",
      "unicorn",
      "markdown"
    ],
    "extends": [
      "plugin:testcafe/recommended",
      "plugin:unicorn/recommended",
      "xo"
    ],
    "rules": {
      "indent": [
        2,
        4,
        {
          "SwitchCase": 1
        }
      ],
      "capitalized-comments": "off"
    }
  },
  "clinton": {
    "ignores": [
      "test/**",
      "lib/**",
      "*.{html,jpg}"
    ],
    "rules": {
      "pkg-main": [
        "off"
      ],
      "xo": [
        "off"
      ]
    }
  }
